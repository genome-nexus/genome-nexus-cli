{
  "name": "genome-nexus-cli",
  "version": "0.0.7",
  "description": "Genome Nexus Command Line Interface",
  "main": "./bin/genome-nexus",
  "repository": "https://github.com/genome-nexus/genome-nexus-cli",
  "author": "inodb",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "@types/clear": "^0.1.0",
    "@types/commander": "^2.12.2",
    "@types/figlet": "^1.2.0",
    "@types/line-reader": "^0.0.28",
    "@types/superagent": "^4.1.3",
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "commander": "^3.0.2",
    "figlet": "^1.2.4",
    "inquirer": "^7.0.0",
    "line-reader": "^0.4.0",
    "lodash": "^4.17.15",
    "n-readlines": "^1.0.0",
    "path": "^0.12.7",
    "request": "^2.88.0",
    "superagent": "^5.1.0"
  },
  "bin": {
    "genome-nexus": "./bin/genome-nexus",
    "genome-nexus-annotate": "./bin/genome-nexus-annotate"
  },
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "@types/node": "^12.11.1",
    "jest": "^24.9.0",
    "json": "^9.0.6",
    "nodemon": "^1.19.4",
    "pkg": "^4.4.0",
    "prettier": "^1.18.2",
    "swagger-js-codegen": "git+https://github.com/cBioPortal/swagger-js-codegen.git#0362f4a1e2d116ad6dffc36e4b57cdfbc93956cf",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "create": "yarn run build && yarn run test",
    "build": "tsc -p .",
    "test": "jest",
    "refresh": "rm -rf ./node_modules ./yarn.lock && yarn install",
    "prettier": "prettier --config ./.prettierrc.js --write './src/**'",
    "test-prettier": "prettier --config ./.prettierrc.js -c './src/**'",
    "test-run": "./bin/genome-nexus annotate 17:g.41242962_41242963insGA",
    "fetchGenomeNexusAPI": "mkdir -p src/api/generated && export GENOME_NEXUS_URL=https://www.genomenexus.org && curl ${GENOME_NEXUS_URL}/v2/api-docs | json | grep -v basePath | grep -v termsOfService | grep -v host > src/api/generated/GenomeNexusAPI-docs.json && curl ${GENOME_NEXUS_URL}/v2/api-docs?group=internal | json | grep -v basePath | grep -v termsOfService | grep -v host > src/api/generated/GenomeNexusAPIInternal-docs.json",
    "updateGenomeNexusAPI": "yarn run fetchGenomeNexusAPI && yarn run buildGenomeNexusAPI",
    "buildGenomeNexusAPI": "node scripts/generate-api.js src/api/generated GenomeNexusAPI GenomeNexusAPIInternal"
  }
}

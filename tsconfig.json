{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "types": ["node"],
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
          "node_modules/@types"
    ],
  },
  "include": ["src"],
  "exclude": ["node_modules","lib"]
}
